---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

// Fetch posts from ai-generated collection only
const posts = (await getCollection('default'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
---

<BaseLayout title="Post Category: Handmade" cls="list1">
  <h2>Category: Handmade</h2>

  {posts.map((post, index) => (
    <>
      <article>
        <h3><a href={`/posts/${post.slug}`}>{post.data.title}</a></h3>
        <p><em>Published: {post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}</em></p>
        <p>{post.data.description}</p>
      </article>

      {index < posts.length - 1 && <hr />}
    </>
  ))}
</BaseLayout>
