---
import BaseLayout from '../layouts/BaseLayout.astro';

const posts = [
  {
    date: '2025-01-20',
    title: 'Getting Started with Lynx Browser',
    slug: '2025-01-20-getting-started-with-lynx',
    tag: 'ai-generated'
  },
  {
    date: '2025-01-15',
    title: 'Why HTML-Only Websites Still Matter',
    slug: '2025-01-15-why-html-only',
    tag: 'ai-generated'
  },
  {
    date: '2025-01-10',
    title: 'First Post: Building a Minimalist Blog',
    slug: '2025-01-10-first-post',
    tag: 'ai-generated'
  }
];
---

<BaseLayout title="All Posts">
  <h2>All Posts</h2>

  <h3>2025</h3>
  <ul>
    {posts.map(post => (
      <li>
        <strong>{post.date.slice(5)}:</strong> <a href={`/posts/${post.slug}`}>{post.title}</a>
      </li>
    ))}
  </ul>
</BaseLayout>
