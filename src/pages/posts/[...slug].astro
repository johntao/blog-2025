---
import { getCollection } from 'astro:content';
import BlogPostLayout from '../../layouts/BlogPostLayout.astro';

export async function getStaticPaths() {
  // Fetch entries from all author collections
  const author1Entries = await getCollection('author1');
  const author2Entries = await getCollection('author2');
  const author3Entries = await getCollection('author3');

  // Combine all entries
  const allEntries = [...author1Entries, ...author2Entries, ...author3Entries];

  return allEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<BlogPostLayout
  title={entry.data.title}
  pubDate={entry.data.pubDate}
  tags={entry.data.tags}
>
  <Content />
</BlogPostLayout>
