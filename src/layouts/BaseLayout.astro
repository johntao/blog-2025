---
interface Props {
  title: string;
  cls: string;
}

const { title, cls } = Astro.props;

const navItems = [
  { label: 'Home', href: '/' },
  { label: 'Posts', href: '/posts' },
  { label: 'Mood', href: '/mood-tracker' },
  { label: 'Tags', href: '/tags' },
  { label: 'About', href: '/about' }
];

const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title} - JT's Weblog</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header>
    <h1>
      <button class="back-btn" id="back-btn" aria-label="Go back">‚Üê</button>
      <a href="/">JT's Weblog</a>
    </h1>
    <!-- <p>Thoughts, writings, and musings</p> -->
  </header>

  <!-- <hr> -->

  <main class={cls}>
    <slot />
  </main>

  <hr>

  <nav>
    <p>
      {navItems.map((item, index) => (
        <>
          {item.href === currentPath ? (
            <strong>{item.label}</strong>
          ) : (
            <a href={item.href}>{item.label}</a>
          )}
          {index < navItems.length - 1 && ' | '}
        </>
      ))}
    </p>
  </nav>

  <script>
    const backBtn = document.getElementById('back-btn');
    if (backBtn) {
      const isRootPage = window.location.pathname === '/';
      const hasReferrer = document.referrer;

      if (!isRootPage && hasReferrer) {
        try {
          const referrerUrl = new URL(document.referrer);
          const isSameOrigin = referrerUrl.origin === window.location.origin;
          const isNotRoot = referrerUrl.pathname !== '/';

          if (isSameOrigin && isNotRoot) {
            backBtn.style.display = 'inline-block';
            backBtn.addEventListener('click', (e) => {
              e.preventDefault();
              history.back();
            });
          }
        } catch (err) {
          // If URL parsing fails, keep button hidden
        }
      }
    }
  </script>
</body>
</html>
