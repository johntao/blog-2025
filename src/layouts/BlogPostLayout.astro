---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  pubDate: Date;
  tags: string[];
}

const { title, pubDate } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title}>
  <article>
    <h2>{title}</h2>
    <pre>
pub: {formattedDate}</pre>
    <hr>

    <slot />
  </article>

</BaseLayout>
