---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  pubDate: Date;
  tags: string[];
}

const { title, pubDate, tags } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title}>
  <article>
    <h2>{title}</h2>
    <pre>tags: {tags.join(', ')}
pub: {formattedDate}</pre>
    <hr>

    <slot />
  </article>

  <hr>

  <nav>
    <p><a href="/posts">‚Üê Back to all posts</a></p>
  </nav>
</BaseLayout>
