---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  pubDate: Date;
  tags: string[];
  collection: string;
  minutesRead: string;
}

const { title, pubDate, collection, minutesRead } = Astro.props;

const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={title}>
  <article>
    <h2>{title}</h2>
    <pre>{collection === 'ai-generated' ? 'AI-GENERATED\n' : ''}est: {minutesRead}
pub: {formattedDate}</pre>
    <hr>

    <slot />
  </article>

</BaseLayout>
